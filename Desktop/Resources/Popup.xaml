<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Wayne.Payment.Products.iXConfigurator.Desktop.Resources">

    <Style x:Key="PopupRegionWindowStyle"
           TargetType="Window">
        <Setter Property="Background"
                Value="White" />
        <Setter Property="Margin"
                Value="0" />
        <Setter Property="Padding"
                Value="0" />
        <Setter Property="ShowInTaskbar"
                Value="{Binding Path=Content.DataContext.ShowInTaskbar, RelativeSource={RelativeSource Self}, FallbackValue=False}" />
        <Setter Property="ResizeMode"
                Value="{Binding Path=Content.DataContext.PopupResizeMode, RelativeSource={RelativeSource Self}, FallbackValue=NoResize}" />
        <Setter Property="SizeToContent"
                Value="{Binding Path=Content.DataContext.PopupSizeToContent, RelativeSource={RelativeSource Self}, FallbackValue=WidthAndHeight}" />
        <Setter Property="Icon"
                Value="{Binding Path=Content.DataContext.Icon, RelativeSource={RelativeSource Self}}" />
        <Setter Property="Title"
                Value="{Binding Path=Content.DataContext.Title, RelativeSource={RelativeSource Self}}" />
    </Style>

</ResourceDictionary>
    