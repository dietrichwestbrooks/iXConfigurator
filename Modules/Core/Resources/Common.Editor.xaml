<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Wayne.Payment.Products.iXConfigurator.Modules.Core.Resources">

    <Style x:Key="EditorPropertyLabel"
           TargetType="TextBlock"
           BasedOn="{StaticResource MetroTextBlock}">
        <Setter Property="Margin"
                Value="0 0 0 2" />
    </Style>

    <Style x:Key="EditorPropertyTextBox"
           TargetType="TextBox"
           BasedOn="{StaticResource MetroTextBox}">
    </Style>

    <Style x:Key="EditorPropertyComboBox"
           TargetType="ComboBox"
           BasedOn="{StaticResource MetroComboBox}">
    </Style>

    <Style x:Key="EditorPropertyType"
           TargetType="TextBlock"
           BasedOn="{StaticResource MetroTextBlock}">
        <Setter Property="Margin"
                Value="0 2 0 0" />
        <Setter Property="Foreground"
                Value="{StaticResource AccentColorBrush}" />
        <Setter Property="FontSize"
                Value="9" />
    </Style>

</ResourceDictionary>
    